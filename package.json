{
  "name": "expressjs-starter",
  "version": "1.0.0",
  "description": "ExpressJs starter template",
  "main": "dist/index.js",
  "author": "Md. Razu Haolader",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "tsc && cp -R src/database dist/database",
    "dev": "ts-node-dev --respawn --transpile-only --exit-child -r tsconfig-paths/register src/index.ts",
    "test": "NODE_ENV=test TS_NODE_TRANSPILE_ONLY=true TS_NODE_FILES=true jest",
    "start": "TS_NODE_BASEURL=./dist node -r tsconfig-paths/register dist/index.js",
    "fmt": "prettier --config .prettierrc 'src/**/*.ts' 'tests/**/*.ts' --write",
    "lint": "yarn run eslint --ext .ts src/",
    "lint:tests": "yarn run eslint --ext .ts --parser-options=project:'tests/tsconfig.json' tests/",
    "postinstall": "if [ \"$DISABLE_POSTINSTALL\" != \"true\" ]; then prisma generate --schema ./src/database/mysql-schema.prisma && prisma generate --schema ./src/database/mongodb-schema.prisma; fi",
    "prisma:generate": "prisma generate --schema ./src/database/mysql-schema.prisma && prisma generate --schema ./src/database/mongodb-schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^3.12.0",
    "axios": "^0.25.0",
    "body-parser": "^1.19.1",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "compromise": "^14.13.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-validator": "^6.14.0",
    "helmet": "^4.6.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.0.11",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "node-schedule": "^2.1.1",
    "prisma": "^3.12.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "rss-parser": "^3.13.0",
    "stripe": "^8.215.0",
    "tsconfig-paths": "^3.12.0",
    "typedi": "^0.10.0",
    "typescript": "^4.9.5",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.5.0",
    "@types/lodash": "^4.17.6",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.1",
    "@types/node-schedule": "^2.1.7",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.29.0",
    "eslint-plugin-filenames": "^1.3.2",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8"
  }
}
